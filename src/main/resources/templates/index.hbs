{{#partial "main"}}
  <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
    <div class="col-md-5 p-lg-5 mx-auto my-5">
      <h1 class="display-4 font-weight-normal">Good App Name</h1>
      <p class="lead font-weight-normal">Say something here about the app...</p>
      <a class="btn btn-outline-secondary" href="{{ authorizeURL }}">Log in to Spotify</a>
    </div>
  </div>

  <div class="bg-dark mr-md-3 pt-3 px-3 pt-md-5 px-md-5 text-center text-white overflow-hidden">
      <div class="my-3 py-3">
          <h2 class="display-5">Section for finding a show based on Spotify user's top artists. </h2>
          <p class="lead">subheading.</p>
          <button>Show me the next show!</button>
          {{#if eventList}}

              <ul>
                  {{#each eventList}}

                      <li>{{name}}</li>
                      <ul>
                          <li>{{localDate}} at {{localTime}}</li>
                          <li>{{venue}}: {{venueUrl}}</li>
                          <li>{{priceRange}}</li>
                          <li>buy tickets: {{url}}</li>
                      </ul>
                  {{/each}}
              </ul>
          {{/if}}
      </div>
  </div>

{{#block "spotify"}}

{{/block}}
{{#block "ticketmaster"}}

{{/block}}


{{/partial}}

