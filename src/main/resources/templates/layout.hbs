<html>
<head>
  {{#block "head"}}
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="icon" href="/assets/images/favicon.ico" type="image/x-icon">
    <title>
      {{#block "title"}}Spot-A-Band{{/block}}
    </title>
    <!-- Stylesheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <link rel="stylesheet" href="/assets/css/app.css"> <!-- Custom CSS -->
    {{#block "registerHelpers"}}{{/block}}
  {{/block}}
</head>
<body>
  {{#block "header-nav"}}
    <nav class="site-header sticky-top py-1">
      <div class="container d-flex flex-column flex-md-row justify-content-between">
        <a class="py-2 d-block align-items-center" href="/">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="mx-auto"><circle cx="12" cy="12" r="10"></circle><line x1="14.31" y1="8" x2="20.05" y2="17.94"></line><line x1="9.69" y1="8" x2="21.17" y2="8"></line><line x1="7.38" y1="12" x2="13.12" y2="2.06"></line><line x1="9.69" y1="16" x2="3.95" y2="6.06"></line><line x1="14.31" y1="16" x2="2.83" y2="16"></line><line x1="16.62" y1="12" x2="10.88" y2="21.94"></line></svg>
        </a>
        {{#if user}}
          <img src="/assets/images/spotify/icons/Spotify_Icon_Green_Coated.svg"  width="20" height="20" alt="Spotify Icon" class="mr-2 d-none d-md-inline-block align-self-center ml-auto">
        {{/if}}
        <a class="py-2 d-none d-md-inline-block text-success" href="https://open.spotify.com/settings/account">{{ user }}</a>
        <!--<a class="py-2 d-none d-md-inline-block"></a>-->

      </div>
    </nav>
  {{/block}}

  {{#block "main"}}
    <!-- Main Page Content Goes Here -->
  {{/block}}

  {{#block "footer"}}
    <footer class="container py-5">
      <div class="row">
        <div class="col-12 col-md">
          <p>JAZAA</p>
          <small class="d-block mb-3 text-muted">&copy;2018</small>
        </div>
        <div class="col-6 col-md">
          <h5>About</h5>
          <ul class="list-unstyled text-small">
            <li><a class="text-muted" href="#">Team</a></li>
          </ul>
        </div>
      </div>
    </footer>
  {{/block}}

  <!-- Scripts -->
  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

  {{#block "custom-scripts"}}
    <!-- Any additional custom scripts for specific pages
         goes here -->
  {{/block}}
</body>
</html>